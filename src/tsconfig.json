{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
        "experimentalDecorators": true,
		"allowJs": true,
		"outDir": "../dist",
		"rootDir": ".",
		"baseUrl": ".",
		"paths": {
			"#utils/*": ["helpers/utils/*"],
			"#helpers/*": ["helpers/*"],
			"#root/*": ["*"]
		},
		"composite": true
	},
	"include": [".", "./**/*.json"],
	"exclude": ["./tsconfig.json"]
}